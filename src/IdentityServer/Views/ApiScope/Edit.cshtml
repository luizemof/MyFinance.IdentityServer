@using IdentityServer.Constants
@using IdentityServer.Models.ApiScope
@using Microsoft.AspNetCore.Mvc.ModelBinding

@model ApiScopeInputModel

<div class="container-fluid">
    <form asp-action="@ControllerConstants.EDIT">
        <input type="hidden" asp-for="Id" value="@Model.Id"/>
        
        @if(ViewContext.ModelState.TryGetValue(ControllerConstants.ERROR, out ModelStateEntry modelStateEntry))
        {
            <div class="alert alert-danger" role="alert">
                Ocorreu um erro na operação. Tente novamente mais tarde ou entre em contato com o administrador do sistema.
            </div>
        }

        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Name">Nome</label>
                <input asp-for="Name" type="text" class="form-control"  value="@Model.Name"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="DisplayName">Nome de exibição</label>
                <input asp-for="DisplayName" type="text" class="form-control" value="@Model.DisplayName" />
                <span asp-validation-for="DisplayName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md">
                <label asp-for="Description">Descrição</label>
                <textarea asp-for="Description" type="text" class="form-control" value="@Model.Description" rows="10"></textarea>
            </div>
        </div>

        <div class="mt-3">
            <button class="btn btn-primary" name="button" value="@ControllerConstants.SAVE">Salvar</button>
            <button class="btn btn-secondary" name="button" value="@ControllerConstants.CANCEL">Cancelar</button>
        </div>
    </form>
</div>